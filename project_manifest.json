    "documentation": {
      "location": "docs/",
      "namingConventions": {
        "permanentDocs": "UPPER_SNAKE_CASE.md (stable reference docs)",
        "devNotesDocs": "kebab-case.md (working documents)",
        "folders": "kebab-case/ (all folders use lowercase with hyphens)",
        "examples": {
          "permanent": ["API_DOCUMENTATION.md", "DATABASE_SCHEMA.md", "SETUP_INSTALLATION.md"],
          "devNotes": ["gold-implementation-status.md", "fix-uuid-validation.md"],
          "folders": ["01-getting-started/", "dev-notes/", "features/"]
        },
        "reasoning": "UPPER_SNAKE_CASE for permanent reference docs (easy to spot), kebab-case for temporary dev notes"
      },
      "structure": {
        "README.md": "Main documentation index and navigation",
        "SETUP_INSTALLATION.md": "Installation and setup guide",
        "SHELL_COMMANDS_GUIDE.md": "PowerShell vs CMD commands reference",
        "API_DOCUMENTATION.md": "Complete REST API reference",
        "DATABASE_SCHEMA.md": "Database tables and relationships",
        "PROJECT_STRUCTURE.md": "Project architecture and folders",
        "FRONTEND_GUIDE.md": "React components and state management",
        "MIGRATION_SUMMARY.md": "localStorage to PostgreSQL migration details",
        "DEPLOYMENT_GUIDE.md": "Deployment instructions",
        "MAINTENANCE.md": "Maintenance and monitoring tasks",
        "CONTRIBUTING.md": "Contribution guidelines",
        "TROUBLESHOOTING.md": "Common issues and solutions",
        "CHANGELOG.md": "Version history and release notes",
        "dev-notes/": "Development notes folder (features, bugfixes, enhancements)"
      },
      "devNotes": {
        "location": "docs/dev-notes/",
        "purpose": "Track implementation progress, bug fixes, and enhancements during development",
        "structure": {
          "implementations/": "Feature implementation status and progress tracking",
          "bugfixes/": "Bug fix documentation and root cause analysis",
          "enhancements/": "Enhancement/improvement documentation (UX, performance, refactoring)",
          "planning/": "Planning documents (specs analysis, restructure plans, proposals)",
          "README.md": "Dev-notes folder guide and best practices"
        },
        "documentTypes": {
          "implementation": {
            "folder": "implementations/",
            "naming": "{feature-name}-status.md",
            "purpose": "Track NEW feature implementation progress from scratch",
            "examples": ["gold-prices-status.md", "weather-tool-status.md", "user-authentication-status.md"]
          },
          "bugfix": {
            "folder": "bugfixes/",
            "naming": "fix-{bug-description}.md",
            "purpose": "Document bug fixes with root cause analysis",
            "examples": ["fix-uuid-validation.md", "fix-shopee-url-extraction.md", "fix-category-hardcode.md"]
          },
          "enhancement": {
            "folder": "enhancements/",
            "naming": "{feature-name}-{enhancement-type}.md",
            "purpose": "Document enhancements to EXISTING features (UX, performance, API improvements)",
            "examples": ["wishlist-category-enhancement.md", "currency-api-resilience.md", "gold-real-api-integration.md"]
          },
          "planning": {
            "folder": "planning/",
            "naming": "{topic}-plan.md",
            "purpose": "Planning and analysis documents before implementation",
            "examples": ["docs-restructure-plan.md", "database-migration-plan.md", "api-versioning-plan.md"]
          }
        },
        "namingConventions": {
          "implementations": "{feature-name}-status.md",
          "bugfixes": "fix-{bug-description}.md",
          "enhancements": "{feature-name}-{enhancement-type}.md",
          "planning": "{topic}-plan.md",
          "allUseKebabCase": true
        },
        "archivePolicy": {
          "keepForever": ["implementations/*", "bugfixes/*", "enhancements/*", "planning/*"],
          "reasoning": "All dev-notes are knowledge base for future reference and learning"
        },
        "aiInstructions": [
          "When implementing NEW feature from scratch: Create implementations/{feature-name}-status.md to track progress",
          "When ENHANCING existing feature: Create enhancements/{feature-name}-{enhancement-type}.md",
          "When fixing bug: Create bugfixes/fix-{bug-description}.md with root cause analysis",
          "When planning major changes: Create planning/{topic}-plan.md with comprehensive analysis",
          "Never create status/summary files in project root - always use docs/dev-notes/",
          "Update existing status files instead of creating duplicates",
          "Follow naming conventions strictly: kebab-case for all dev-notes files",
          "Distinguish between implementation (new) vs enhancement (existing feature improvement)"
        ]
      },
      "specKit": {
        "location": "specs/",
        "purpose": "Manage feature specifications, implementation plans, and task breakdowns using structured workflow",
        "structure": {
          "README.md": "Spec Kit user guide and workflow documentation",
          "COMMANDS.md": "Command reference and usage examples",
          "config.json": "Configuration and validation rules",
          "specs/": "Feature specifications (.spec files)",
          "plans/": "Implementation plans (.plan files)",
          "plans/tasks/": "Task breakdown files (.task files)",
          "templates/": "Reusable templates for specs, plans, and tasks"
        },
        "namingConventions": {
          "specs": "specs/specs/{id}_{name}.spec",
          "plans": "specs/plans/{spec_id}.plan",
          "tasks": "specs/plans/tasks/{plan_id}_phase{X}_task{Y}.task"
        },
        "workflow": {
          "step1": "Create specification with /specify command",
          "step2": "Create implementation plan with /plan command",
          "step3": "Break down into tasks with /tasks command",
          "step4": "Execute and track with /implement command"
        },
        "commands": {
          "/specify": "Create new specification document",
          "/plan": "Create implementation plan for a spec",
          "/tasks": "Break down plan phase into actionable tasks",
          "/implement": "Start implementation and track progress"
        },
        "integration": {
          "devNotes": "Links to docs/dev-notes/features/ for tracking",
          "documentation": "Links to API docs, database schema, user guides",
          "manifest": "Updates project_manifest.json with new features"
        },
        "aiInstructions": [
          "When user requests new feature: Use /specify to create spec",
          "After spec approved: Use /plan to create implementation plan",
          "For complex phases: Use /tasks to break down work",
          "When starting implementation: Use /implement to track progress",
          "Always link specs â†’ plans â†’ tasks â†’ implementation status",
          "Update progress percentages in plans as tasks complete",
          "Document technical decisions in plans with reasoning",
          "Keep specs focused on WHAT, plans on HOW, tasks on execution"
        ]
      },
      "notes": [
        "All docs use .md extension for GitHub compatibility",
        "README.md serves as index/navigation hub",
        "NAMING: UPPER_SNAKE_CASE for permanent reference docs, kebab-case for dev-notes",
        "FOLDERS: Always use kebab-case with numbers if needed (01-getting-started/)",
        "Each doc is self-contained with internal links",
        "Dev-notes are knowledge base (not temporary) - keep forever",
        "Spec Kit provides structured workflow for planning and tracking",
        "Distinguish: implementations/ (new features) vs enhancements/ (improvements to existing)"
      ]
    }
  },
  
  "database": {
    "name": "kadong_tools",
    "host": "localhost",
    "port": 5432,
    "poolSize": 20,
    "idleTimeout": 30000,
    "connectionTimeout": 2000,
    "ssl": false,
    "sslProduction": true,
    "tables": [
      "users",
      "notes",
      "countdown_events",
      "tools",
      "feedback",
      "currency_rates",
      "sessions",
      "fashion_outfits"
    ],
    "primaryKey": "uuid",
    "foreignKeyConstraints": true,
    "cascadeRules": {
      "users->notes": "CASCADE",
      "users->countdown_events": "CASCADE",
      "users->sessions": "CASCADE",
      "users->feedback": "SET NULL",
      "tools->notes": "SET NULL"
    },
    "indexes": {
      "required": [
        "users(email)",
        "notes(user_id)",
        "notes(created_at DESC)",
        "countdown_events(user_id)",
        "countdown_events(target_date)",
        "sessions(token)",
        "sessions(expires_at)"
      ],
      "gin": [
        "users(preferences)",
        "tools(config)",
        "currency_rates(rates)"
      ]
    },
    "triggers": [
      "update_updated_at_column"
    ]
  },
  
  "api": {
    "baseUrl": "http://localhost:5000",
    "prefix": "/api",
    "version": "v1",
    "contentType": "application/json",
    "cors": {
      "enabled": true,
      "origin": "http://localhost:5173",
      "credentials": true
    },
    "rateLimit": {
      "general": {
        "windowMs": 900000,
        "max": 100
      },
      "auth": {
        "windowMs": 900000,
        "max": 5
      },
      "writes": {
        "windowMs": 3600000,
        "max": 50
      }
    },
    "endpoints": {
      "auth": "/api/auth",
      "notes": "/api/notes",
      "events": "/api/events",
      "tools": "/api/tools",
      "feedback": "/api/feedback",
      "currency": "/api/currency",
      "users": "/api/users",
      "fashion": "/api/fashion"
    },
    "responseFormat": {
      "success": {
        "success": true,
        "data": "{}",
        "message": "optional"
      },
      "error": {
        "success": false,
        "error": {
          "code": "ERROR_CODE",
          "message": "string",
          "details": "optional"
        }
      }
    },
    "statusCodes": {
      "200": "OK - Successful GET/PUT/DELETE",
      "201": "Created - Successful POST",
      "204": "No Content - Successful DELETE no body",
      "400": "Bad Request - Invalid data",
      "401": "Unauthorized - Auth required",
      "403": "Forbidden - Not authorized",
      "404": "Not Found - Resource missing",
      "409": "Conflict - Duplicate resource",
      "422": "Unprocessable Entity - Validation failed",
      "500": "Internal Server Error"
    }
  },
  
  "tests": {
    "framework": "playwright",
    "version": "^1.40.0",
    "types": {
      "api": "Playwright API Testing",
      "e2e": "Playwright E2E Testing",
      "component": "Playwright Component Testing (experimental)"
    },
    "coverageThreshold": 80,
    "coverageReports": ["html", "json", "lcov"],
    "testMatch": [
      "**/__tests__/**/*.spec.js",
      "**/tests/**/*.spec.js",
      "**/*.test.js"
    ],
    "browsers": ["chromium", "firefox", "webkit"],
    "defaultBrowser": "chromium",
    "headless": true,
    "baseURL": {
      "api": "http://localhost:5000",
      "frontend": "http://localhost:3000"
    },
    "commands": {
      "test": "npx playwright test",
      "testAPI": "npx playwright test --grep @api",
      "testE2E": "npx playwright test --grep @e2e",
      "testComponent": "npx playwright test --grep @component",
      "testWatch": "npx playwright test --ui",
      "testDebug": "npx playwright test --debug",
      "testReport": "npx playwright show-report",
      "testCodegen": "npx playwright codegen http://localhost:3000"
    },
    "features": {
      "parallelExecution": true,
      "retries": 2,
      "screenshot": "only-on-failure",
      "video": "retain-on-failure",
      "trace": "on-first-retry",
      "apiMocking": true,
      "networkInterception": true,
      "visualRegression": false
    },
    "mockData": {
      "users": 3,
      "notes": 5,
      "events": 4,
      "tools": 5,
      "feedback": 2,
      "fashion_outfits": 3
    },
    "reasoning": "Playwright chosen over Jest/Cypress for: (1) Unified testing - API + E2E + Component in one framework, (2) Better performance with parallel execution, (3) Cross-browser support (Chromium, Firefox, WebKit), (4) Built-in network interception and API mocking, (5) Microsoft support and modern architecture, (6) Better debugging with trace viewer and UI mode"
  },
  
  "security": {
    "noHardcodedSecrets": true,
    "useEnvVariables": true,
    "envFile": ".env",
    "envExample": ".env.example",
    "auth": {
      "strategy": "jwt",
      "tokenType": "Bearer",
      "tokenExpiry": "7d",
      "refreshToken": false,
      "passwordHash": "bcrypt",
      "saltRounds": 10
    },
    "sqlInjectionPrevention": {
      "method": "parameterized-queries",
      "placeholder": "$1, $2, $3...",
      "neverConcatenate": true
    },
    "xss": {
      "sanitizeInput": true,
      "escapeOutput": true
    },
    "csrf": {
      "enabled": false,
      "note": "Not needed for stateless JWT API"
    },
    "headers": {
      "helmet": true,
      "cors": true
    },
    "secrets": [
      "SESSION_SECRET",
      "JWT_SECRET",
      "DB_PASSWORD",
      "CURRENCY_API_KEY"
    ],
    "avoidInCode": [
      "hardcoded passwords",
      "console.log with sensitive data",
      "unencrypted tokens",
      "SQL string concatenation"
    ]
  },
  
  "deploy": {
    "environments": {
      "development": {
        "frontendUrl": "http://localhost:5173",
