  },
  
  "gitWorkflow": {
    "branches": {
      "main": "production",
      "develop": "development",
      "feature": "feature/*",
      "fix": "fix/*",
      "docs": "docs/*",
      "refactor": "refactor/*",
      "test": "test/*",
      "chore": "chore/*"
    },
    "commitConvention": "conventional-commits",
    "commitTypes": [
      "feat: New feature",
      "fix: Bug fix",
      "docs: Documentation",
      "style: Code formatting",
      "refactor: Code refactoring",
      "test: Tests",
      "chore: Maintenance"
    ],
