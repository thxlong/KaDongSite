{
  "name": "kadongsite-backend",
  "version": "1.0.0",
  "description": "Backend API for KaDong Tools",
  "main": "src/server.js",
  "type": "module",
  "imports": {
    "#api/*": "./src/api/*",
    "#services/*": "./src/services/*",
    "#database/*": "./src/database/*",
    "#config/*": "./src/config/*",
    "#utils/*": "./src/utils/*",
    "#models/*": "./src/models/*",
    "#providers/*": "./src/providers/*"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "db:migrate:up": "node scripts/database/migrate.js up",
    "db:migrate:down": "node scripts/database/migrate.js down",
    "db:migrate:status": "node scripts/database/migrate.js status",
    "db:seed": "node scripts/database/seed.js",
    "db:test": "node scripts/database/test-db.js",
    "db:setup": "npm run db:migrate:up && npm run db:seed",
    "gold:fetch": "node scripts/cron/fetch-gold-prices.js",
    "gold:fetch:cron": "node scripts/cron/fetch-gold-prices.js --cron",
    "test": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:unit": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js tests/unit",
    "test:integration": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js tests/integration",
    "test:security": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js tests/security",
    "test:performance": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js tests/performance",
    "test:ci": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --ci --coverage --maxWorkers=2"
  },
  "keywords": [
    "express",
    "api",
    "tools",
    "postgresql"
  ],
  "author": "KaDong",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.13.2",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "node-cron": "^4.2.1",
    "pg": "^8.11.3",
    "validator": "^13.15.23",
    "winston": "^3.18.3",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@types/jest": "^30.0.0",
    "cross-env": "^10.1.0",
    "jest": "^30.2.0",
    "jest-coverage-badges": "^1.1.2",
    "nock": "^14.0.10",
    "nodemon": "^3.0.2",
    "sinon": "^21.0.0",
    "supertest": "^7.1.4"
  }
}
