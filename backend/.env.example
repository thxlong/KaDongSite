# Backend Configuration

# Server
PORT=5000
NODE_ENV=development

# PostgreSQL Database Configuration
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/kadongsite

# Or use individual parameters:
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=kadongsite
# DB_USER=postgres
# DB_PASSWORD=your_password

# JWT Secret (for authentication)
# SECURITY: Generate with: openssl rand -base64 32
JWT_SECRET=your_very_secure_secret_key_min_32_characters

# Session Configuration
SESSION_SECRET=your_session_secret_key
SESSION_EXPIRE_DAYS=7

# Cookie Security (Production)
COOKIE_SECURE=false  # Set to 'true' in production (requires HTTPS)
COOKIE_SAME_SITE=lax # Options: 'strict', 'lax', 'none'

# API Keys (for integrations)
CURRENCY_API_KEY=your_currency_api_key
WEATHER_API_KEY=your_weather_api_key

# Gold Price API Keys (Optional - for real-time data)
# Get free API keys:
# - GoldAPI.io: https://www.goldapi.io/dashboard (50 req/month)
# - Metals-API: https://metals-api.com/signup/free (100 req/month)
GOLDAPI_KEY=
METALSAPI_KEY=

# Manual Gold Price Overrides (VND per lượng, 37.5g)
# Update daily from https://sjc.com.vn if APIs unavailable
MANUAL_SJC_9999_BUY=78900000
MANUAL_SJC_9999_SELL=79400000
MANUAL_SJC_24K_BUY=78600000
MANUAL_SJC_24K_SELL=79100000
MANUAL_DOJI_24K_BUY=78500000
MANUAL_DOJI_24K_SELL=79000000
MANUAL_XAU_USD=2650.50

# CORS Configuration (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # max 100 requests per window

# Logging (Production)
LOG_LEVEL=info  # Options: 'error', 'warn', 'info', 'debug'

# Production Environment Variables (Set these on Railway/Vercel)
# DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require
# JWT_SECRET=<generated-with-openssl-rand-base64-32>
# SESSION_SECRET=<generated-random-string>
# ALLOWED_ORIGINS=https://kadong-tools.com,https://www.kadong-tools.com
# COOKIE_SECURE=true
# NODE_ENV=production
